<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/invoice_part_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        android:fontFamily="@font/avenir"
        android:gravity="center_vertical"
        android:text="PROVIDER REF$ 0123"
        android:textColor="@color/dark_grey"
        android:textSize="21sp"
        app:layout_constraintEnd_toStartOf="@id/invoice_part_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invoice_part_amount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/avenir"
        android:gravity="center_vertical|end"
        android:paddingEnd="48dp"
        android:paddingVertical="16dp"
        android:text="$123.45"
        android:textColor="@color/dark_grey"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/invoice_part_id"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingEnd="12dp"
        android:src="@drawable/forward_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>