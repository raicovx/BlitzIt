            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:background="@color/light_grey"
            app:cardCornerRadius="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
