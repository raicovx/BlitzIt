<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="@string/line_item"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="21sp" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/line_item_detail_item_name"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/input_bg"
        android:focusable="false"
        android:fontFamily="@font/avenir"
        android:inputType="none"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="04_104_0125_6_1"
        android:textColor="@color/dark_grey"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:layout_marginTop="16dp"
        android:text="@string/service_description"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="21sp" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/line_item_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:background="@drawable/input_bg"
        android:focusable="false"
        android:fontFamily="@font/avenir"
        android:inputType="none"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:text="Access community, social and Rec Activities -Standard -Weekday Daytime"
        android:textColor="@color/dark_grey"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/avenir"
        android:text="@string/service_dates"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="21sp" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/line_item_detail_service_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="@drawable/input_bg"
        android:focusable="false"
        android:fontFamily="@font/avenir"
        android:inputType="none"
        android:maxLines="2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="04_104_0125_6_1"
        android:textColor="@color/dark_grey"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/avenir"
        android:text="@string/claimed_quantity_hour"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="21sp" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/line_item_detail_quantity_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="@drawable/input_bg"
        android:focusable="false"
        android:fontFamily="@font/avenir"
        android:inputType="none"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="04_104_0125_6_1"
        android:textColor="@color/dark_grey"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/avenir"
        android:text="@string/claimed_price_per_unit_hour"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="21sp" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/line_item_detail_price_unit_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="@drawable/input_bg"
        android:focusable="false"
        android:fontFamily="@font/avenir"
        android:inputType="none"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="04_104_0125_6_1"
        android:textColor="@color/dark_grey"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="36dp"/>

</LinearLayout>