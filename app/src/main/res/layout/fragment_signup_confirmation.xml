<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.registration.SignUpConfirmationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_colour_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sign_up_heading"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:text="Create New Account"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sign_up_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_heading" />

        <ProgressBar
            android:id="@+id/sign_up_progress"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginVertical="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_up_divider" />

        <LinearLayout
            android:id="@+id/sign_up_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="48dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_up_divider">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="Success!"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="Your information has been submitted to Blitzit to create a New Account."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="You should receive an email in 15 minutes with a vertification code, and confirming the account details entered."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="If you do not receive this email in 15 minutes, please contact Blitzit Plan Manager."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textColor="@color/white"
                android:text="Confirmation Code"
                android:fontFamily="@font/avenir"
                android:textSize="24sp"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/sign_up_confirmation_code"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:fontFamily="@font/avenir"
                android:textSize="21sp"
                android:maxLines="1"
                android:hint="858979"
                android:textColor="@color/dark_grey"
                android:inputType="number"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textColor="@color/white"
                android:text="Enter Password"
                android:fontFamily="@font/avenir"
                android:textSize="24sp"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/sign_up_password_1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:fontFamily="@font/avenir"
                android:textSize="21sp"
                android:maxLines="1"
                android:hint="Password"
                android:textColor="@color/dark_grey"
                android:inputType="textPassword"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textColor="@color/white"
                android:text="Re-Enter Password"
                android:fontFamily="@font/avenir"
                android:textSize="24sp"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/sign_up_password_2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:fontFamily="@font/avenir"
                android:textSize="21sp"
                android:maxLines="1"
                android:hint="Password"
                android:textColor="@color/dark_grey"
                android:inputType="textPassword"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/sign_up_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/avenir"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/blitz_it_orange"
                app:cornerRadius="92dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>